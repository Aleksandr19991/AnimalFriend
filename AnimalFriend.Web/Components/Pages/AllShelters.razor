@page "/allshelter"
@rendermode RenderMode.InteractiveServer

<h3 class=" color-h3 position-text">AllShelters</h3>

<div class="conteiner-for-allshelterscard">
    @foreach (var item in Shelters)
    {
        <ShelterCard Shelter="@item" />
    }
</div>

@code {
    
    public List<ShelterCardOutputModel> Shelters { get; set; }

    private ShelterManager _shelterManager { get; set; }

    public AllShelters()
    {
        _shelterManager = new ShelterManager();
        Shelters = _shelterManager.GetAllShelter();
    }
}
